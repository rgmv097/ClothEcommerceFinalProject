@model List<Blog>
<div class="sidebar-box sidebar-item sidebar-item-wide">
    <span class="opener plus"></span>
    <div class="sidebar-title">
        <h3><span>Recent Post</span></h3>
    </div>
    <div class="sidebar-contant">
        <ul>
            @foreach (var item in Model)
            {
                <li>
                <div class="pro-media"> <a asp-controller="blog" asp-action="details" asp-route-id="@item.Id"><img alt="Blog" src="~/images/blog/@item.ImageUrl"></a> </div>
                <div class="pro-detail-info">
                        <a asp-controller="blog" asp-action="details" asp-route-id="@item.Id">@item.Title</a>
                    <div class="post-info">@item.Date</div>
                </div>
            </li>
            }
            
           
        </ul>
    </div>
</div>