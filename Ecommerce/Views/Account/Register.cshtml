@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
   
}

<!-- Bread Crumb STRAT -->
<div class="banner inner-banner1 ">
    <div class="container">
        <section class="banner-detail center-xs">
            <h1 class="banner-title">Register</h1>
            <div class="bread-crumb right-side float-none-xs">
                <ul>
                    <li><a href="index-2.html">Home</a>/</li>
                    <li><span>Register</span></li>
                </ul>
            </div>
        </section>
    </div>
</div>
<!-- Bread Crumb END -->
<!-- CONTAIN START -->
<section class="checkout-section ptb-70">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="row justify-content-center">
                    <div class="col-xl-6 col-lg-8 col-md-8 ">
                        <form asp-action="register" method="post" class="main-form full">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-12 mb-20">
                                    <div class="heading-part heading-bg">
                                        <h2 class="heading">Create your account</h2>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-box">
                                        <label asp-for="Username">User Name</label>
                                        <input asp-for="Username" placeholder="User Name">
                                        <span asp-validation-for="Firstname" class="text-danger font-weight-bold"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-box">
                                        <label asp-for="Firstname">First Name</label>
                                        <input asp-for="Firstname" placeholder="First Name">
                                        <span asp-validation-for="Firstname" class="text-danger font-weight-bold"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-box">
                                        <label asp-for="Lastname">Last Name</label>
                                        <input asp-for="Lastname"  placeholder="Last Name">
                                        <span asp-validation-for="Lastname" class="text-danger font-weight-bold"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-box">
                                        <label asp-for="Email">Email address</label>
                                        <input asp-for="Email" placeholder="Email Address">
                                        <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-box">
                                        <label asp-for="Password">Password</label>
                                        <input asp-for="Password"  placeholder="Enter your Password">
                                        <span asp-validation-for="Password" class="text-danger font-weight-bold"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-box">
                                        <label asp-for="ConfirmPassword">Re-enter Password</label>
                                        <input asp-for="ConfirmPassword"  placeholder="Re-enter your Password">
                                        <span asp-validation-for="ConfirmPassword" class="text-danger font-weight-bold"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-box">
                                        <label asp-for="Country">Country</label>
                                        <input asp-for="Country" placeholder="Enter your Country">
                                        <span asp-validation-for="Country" class="text-danger font-weight-bold"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-box">
                                        <label asp-for="City">City</label>
                                        <input asp-for="City" placeholder="Enter your City">
                                        <span asp-validation-for="City" class="text-danger font-weight-bold"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-box">
                                        <label asp-for="Address">Address</label>
                                        <input asp-for="Address" placeholder="Enter your Address">
                                        <span asp-validation-for="Address" class="text-danger font-weight-bold"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-box">
                                        <label asp-for="ZipCode">Zip Code</label>
                                        <input asp-for="ZipCode" placeholder="Enter Zip Code">
                                        <span asp-validation-for="ZipCode" class="text-danger font-weight-bold"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    
                                    <button type="submit" class="btn-color right-side">Submit</button>
                                </div>
                                <div class="col-12">
                                    <hr>
                                    <div class="new-account align-center mt-20"> <span>Already have an account with us</span> <a class="link" title="Register with Stylexpo" asp-controller="account" asp-action="login">Login Here</a> </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- CONTAINER END -->
